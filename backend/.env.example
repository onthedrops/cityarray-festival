# CITYARRAY Festival Edition - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# SERVER
# =============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=true

# =============================================================================
# DATABASE
# =============================================================================
# SQLite (default for development)
DATABASE_URL=sqlite:///./cityarray.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/cityarray

# =============================================================================
# TWILIO (SMS and Voice)
# =============================================================================
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+15551234567

# =============================================================================
# WEATHER API
# =============================================================================
# Get from https://openweathermap.org/api
OPENWEATHER_API_KEY=your_api_key_here

# =============================================================================
# SECURITY (Production)
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change_this_in_production

# JWT settings
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# =============================================================================
# CORS (Production)
# =============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# ALERTS
# =============================================================================
# Default phone for critical alerts
ALERT_PHONE=+15551234567

# Alert thresholds
BATTERY_WARNING_THRESHOLD=30
BATTERY_CRITICAL_THRESHOLD=10
SIGN_OFFLINE_TIMEOUT_SECONDS=30
